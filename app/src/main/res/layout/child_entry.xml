<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/childPicture"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:src="@drawable/ic_person_placeholder"
        app:civ_border_width="0dp"
        app:civ_border_color="#FFFFFF"/>

    <ImageButton
        android:id="@+id/ib_delete_child"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:visibility="visible"
        android:background="@drawable/ic_delete"
        android:layout_marginLeft="5dp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        />


    <ImageButton
        android:id="@+id/ib_edit"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/ib_delete_child"
        android:visibility="visible"
        android:background="@drawable/ic_edit"
        android:layout_marginLeft="5dp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:scaleType="fitCenter"/>

    <ImageButton
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/ib_edit"
        android:id="@+id/ibAddMeasurement"
        android:background="@android:drawable/ic_input_add"
        android:layout_marginLeft="5dp"
        android:layout_width="35dp"
        android:layout_height="35dp"/>

    <ImageButton
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/ibAddMeasurement"
        android:id="@+id/ibListMeasurements"
        android:background="@drawable/ic_menu"
        android:layout_marginLeft="5dp"
        android:layout_width="35dp"
        android:layout_height="35dp"/>

    <ImageButton
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/ibListMeasurements"
        android:background="@drawable/ic_show_graph"
        android:id="@+id/ibShowChart"
        android:layout_marginLeft="5dp"
        android:layout_width="35dp"
        android:layout_height="35dp"/>



    <TextView
        android:layout_height="wrap_content"
        android:id="@+id/tv_child_first_name"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/childPicture"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:textColor="@android:color/black"
        android:layout_width="100dp"/>

</RelativeLayout>